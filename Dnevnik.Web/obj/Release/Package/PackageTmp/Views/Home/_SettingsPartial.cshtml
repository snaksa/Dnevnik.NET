@model Dnevnik.Data.Teacher
@using (Html.BeginForm("SaveSettings", "Home", FormMethod.Post))
{
    @Html.AntiForgeryToken()
            <!-- Advanced Tables -->
    <div class="panel panel-default">
        <div class="panel-heading" style="cursor: pointer;">
            <div style="float: left;">Редактиране на настройките</div>
            <div style="clear:both;"></div>
        </div>
        <div class="panel-body" id="addStudentDiv">
            <table class="table table-striped table-bordered table-hover" style="width: 300px;">
                <tr>
                    <td style="text-align: center;">Име</td>
                    <td>
                        @Html.EditorFor(m => @Model.Name, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.HiddenFor(m => @Model.Id)
                    </td>
                </tr>
                <tr>
                    <td style="text-align: center;">E-mail</td>
                    <td>@Html.EditorFor(m => @Model.Email, new { htmlAttributes = new { @class = "form-control" } })</td>
                </tr>
                <tr>
                    <td style="text-align: center;">Парола</td>
                    <td>@Html.EditorFor(m => @Model.Password, new { htmlAttributes = new { @class = "form-control" } })</td>
                </tr>
                <tr>
                    <td colspan="2"><input type="submit" class="saveChangesButton" style="width: 100%;" value="Запази" /></td>
                </tr>
            </table>
        </div>
    </div>
            <!--End Advanced Tables -->
}