@model Dnevnik.Web.ViewModels.AttendanceStatsViewModel
@{
    TempData["title"] = "Отсъствия";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div id="page-wrapper">
    <div id="page-inner">

        <div class="row">
            <div class="col-md-12">
                <h1 class="page-header">Справка за отсъствия</h1>
            </div>
        </div>

        <div class="panel-heading">
            @using (Html.BeginForm("Attendance", "Stats", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <div style="float: left;">
                    От 
                    <input type="text" name="dd1" id="date" class="tcal" />
                </div>
                <div style="float: left;">
                    &nbsp;до&nbsp;
                    <input type="text" name="dd2" id="date" class="tcal" />
                    <input type="submit" class="attendanceButton" value="Покажи" />
                </div>
            }
            <div style="clear:both;"></div>
        </div>



        <div class="panel panel-default">
            <div class="panel-heading">
                <div style="float: left;">
                    Справка за отсъствия от @Model.Date1.ToString("dd-MM-yyyy") до @Model.Date2.ToString("dd-MM-yyyy")
                </div>
                <div style="clear:both;"></div>
            </div>

            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example" style="width: 400px;">
                        <tbody>
                            <tr>
                                <td width="50px" style="text-align: center;">№</td>
                                <td width="150px" style="text-align: center;">Извинени</td>
                                <td width="150px" style="text-align: center;">Неизвинени</td>
                            </tr>
                            @for (int i = 0; i < Model.Students.Count; i++)
                            {
                                <tr>
                                    <td style="text-align: center;">@Model.Students[i].Number.</td>
                                    <td style="text-align: center;">@Model.Izvineni[i]</td>
                                    <td style="text-align: center;">@Model.Neizvineni[i]</td>
                                </tr>
                            }
                        </tbody>
                    </table>

                    <footer></footer>
                </div>
                <!-- /. PAGE INNER  -->
            </div>
        </div>
    </div>
</div>
