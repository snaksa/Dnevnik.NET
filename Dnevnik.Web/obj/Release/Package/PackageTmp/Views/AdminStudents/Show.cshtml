@{
    ViewBag.Title = "Добавяне на ученици";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div id="page-wrapper">
    <div id="page-inner">

        <div class="row">
            <div class="col-md-12">
                <h1 class="page-header">Импортиране на ученици</h1>
            </div>
        </div>

        @if (TempData["success"] == "1")
        {
            <div class="alert alert-success">
                Промените са запазени успешно.
            </div>
        }
        else if (TempData["success"] == "0")
        {
            <div class="alert alert-danger">
                Нещо се обърка. Промените не бяха запазени успешно.
            </div>
        }

        @using (Html.BeginForm("FileUpload", "AdminStudents", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            <!-- Advanced Tables -->
            <div class="panel panel-default">
                <div class="panel-heading" style="cursor: pointer;" onclick="ShowAddStudentTable()">
                    <div style="float: left;">Импортиране на ученици</div>
                    <div style="clear:both;"></div>
                </div>
                <div class="panel-body" id="addStudentDiv" style="display: none;">
                    <table class="table table-striped table-bordered table-hover" style="width: 300px;">
                        <tr>
                            <td style="text-align: center;">Файл</td>
                            <td><input type="file" name="file" value="Избор" ></td>
                        </tr>
                        <tr>
                            <td colspan="2"><input type="submit" class="saveChangesButton" name="fileupload" style="width: 100%;" value="Качване на файл" /></td>
                        </tr>
                    </table>
                </div>
            </div>
            <!--End Advanced Tables -->
        }
        </div>



    </div>
</div>