@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <link href='http://fonts.googleapis.com/css?family=Montserrat:400,700' rel='stylesheet' type='text/css'>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
    <meta charset="UTF-8">

    <title>Електронен дневник - Вход в системата</title>
    <style>
        body {
            background: url('../../Content/assets/img/loginBackground.jpg') no-repeat fixed center center;
            background-size: cover;
            font-family: Montserrat;
            overflow: hidden;
        }

        .layout {
            overflow-y: scroll;
            position: absolute;
            left: 0;
            top: 0;
            right: -30px;
            bottom: 0;
        }

        .logo {
            width: 313px;
            margin: 20px auto;
            margin-top: 40px;
            margin-bottom: 0px;
            width: 320px;
            padding: 20px;
            color: #fff;
            text-align: center;
            text-shadow: 0 0 3px #000, 0 0 5px #000;
            background: rgba(9, 25, 43, 0.9);
            border-radius: 5px 5px 0px 0px;
        }

        .logoTitle {
            font-size: 26px;
            font-weight: bold;
        }

        .login-block {
            width: 360px;
            padding: 20px;
            background: #fff;
            border-radius: 0px 0px 5px 5px;
            border: 1px solid #09192A;
            box-sizing: border-box;
            margin: 0 auto;
            position: relative;
        }

            .login-block h1 {
                text-align: center;
                color: #000;
                font-size: 18px;
                text-transform: uppercase;
                margin-top: 0;
                margin-bottom: 20px;
            }

            .login-block input {
                width: 100%;
                height: 42px;
                box-sizing: border-box;
                border-radius: 5px;
                border: 1px solid #ccc;
                margin-bottom: 20px;
                font-size: 14px;
                font-family: Montserrat;
                padding: 0 20px 0 50px;
                outline: none;
            }

                .login-block input#username {
                    background: #fff url('../../Content/assets/img/loginUserIcon.png') 20px top no-repeat;
                    background-size: 16px 80px;
                }

                .login-block input#password {
                    background: #fff url('http://i.imgur.com/Qf83FTt.png') 20px top no-repeat;
                    background-size: 16px 80px;
                }

                .login-block input:active, .login-block input:focus {
                    border: 1px solid #09192A;
                }

        .submitButton {
            width: 100%;
            height: 40px;
            background: #09192A;
            border-radius: 5px;
            border: none;
            color: #fff;
            font-weight: bold;
            text-transform: uppercase;
            font-size: 14px;
            font-family: Montserrat;
            outline: none;
            cursor: pointer;
        }

            .submitButton:hover {
                background: #2464a8;
            }

        .forgottenPassword {
            width: 200px;
            cursor: pointer;
            margin: 10px auto;
            margin-bottom: 0px;
            text-align: center;
            color: #09192A;
        }

            .forgottenPassword:hover {
                text-decoration: underline;
                color: #2464a8;
            }

        .forgottenPasswordDiv {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            box-sizing: border-box;
            border-radius: 0px 0px 5px 5px;
            display: none;
            background-color: #fff;
            padding: 20px;
            padding-top: 55px;
        }
    </style>

    <script>
        function ShowForgottenPassword() {
            $("#frgPass").slideToggle("slow");
        }
    </script>
</head>

<body>

    <div class="layout">
        @{
            string title = "Вход в системата";
            string message = "E-mail";
            if (TempData["error"] != null)
            {
                message = "Грешен e-mail или парола";
            }

            if (TempData["sent"] == "1")
            {
                title = "Имейлът е изпратен успешно";
            }
            else if (TempData["sent"] == "0")
            {
                title = "Няма учител с такъв E-mail";
            }
        }


        <div class="logo">
            <span class="logoTitle">Електронен дневник</span>
            <br />
            СОУ "Христо Ботев"
            <br />
            гр. Кубрат
        </div>
        <div class="login-block">
            @using (Html.BeginForm("Login", "Home", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <h1>@title</h1>
                <input type="text" value="" placeholder="@message" name="username" id="username" />
                <input type="password" value="" placeholder="Парола" name="password" id="password" />
                <button type="submit" class="submitButton">Вход</button>
            }
            <div class="forgottenPassword" onclick="ShowForgottenPassword()">Забравена парола</div>
            <div class="forgottenPasswordDiv" id="frgPass">
                @using (Html.BeginForm("SendPassword", "Home", FormMethod.Post))
                { @Html.AntiForgeryToken()  <h1>Възстановяване на парола</h1>
                    <input type="text" value="" placeholder="Моля въведете своя e-mail" name="email" id="username" />
                    <button type="submit" class="submitButton">Изпрати</button>

                    <div class="forgottenPassword" onclick="ShowForgottenPassword()">Назад</div>
                }
            </div>

        </div>
    </div>

</body>

</html>