@{
    TempData["title"] = "Изтриване на данни";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div id="page-wrapper">
    <div id="page-inner">

        <div class="row">
            <div class="col-md-12">
                <h1 class="page-header">Изтриване на данни</h1>
            </div>
        </div>

        <div class="panel panel-default">
            <div class="panel-heading">
                <div style="float: left;">Изтриване на данни</div>
                <div style="clear:both;"></div>
            </div>
            <div class="panel-body">
                <div class="table-responsive">
                    @using (Html.BeginForm("DeleteData", "AdminClearData", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <div>
                            <input type="submit" class="saveChangesButton" style="width: 100%;text-align:center;margin-bottom: 20px;border-radius:0px;" value="Изтриване на ученици, отсъствия, оценки и програма">
                        </div>
                    }

                    <footer></footer>
                </div>
                <!-- /. PAGE INNER  -->
            </div>
        </div>



    </div>
</div>